{
  "src": "./packages/**/*.e2e.js",
  "reporter": [
    {
      "name": "spec"
    },
    {
      "name": "xunit",
      "output": "./reports/report.xml"
    },
    {
      "name": "json",
      "output": "./reports/report.json"
    },
    {
      "name": "html",
      "output": "./reports/report.html"
    }
  ],
  "screenshots": {
    "path": "./reports/screenshots/",
    "pathPattern": "test-${TEST_INDEX}-${QUARANTINE_ATTEMPT}/${FILE_INDEX}.png",
    "takeOnFails": true,
    "fullPage": true
  },
  "videoPath": "./reports/videos/",
  "videoOptions": {
    "singleFile": false,
    "failedOnly": true,
    "pathPattern": "test-${FIXTURE}/name-${TEST}.mp4"
  },
  "videoEncodingOptions": {
    "r": 20,
    "aspect": "4:3"
  },
  "quarantineMode": false,
  "debugMode": false,
  "debugOnFail": false,
  "stopOnFirstFail": false,
  "skipJsErrors": true,
  "skipUncaughtErrors": true,
  "concurrency": 1,
  "selectorTimeout": 20000,
  "assertionTimeout": 20000,
  "pageLoadTimeout": 20000,
  "speed": 1,
  "developmentMode": false,
  "qrCode": false
}
